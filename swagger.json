{
  "swagger": "2.0",
  "info": {
    "title": "Record Store API",
    "description": "Record Store Api for Cs340 final project",
    "version": "1.0.0"
  },
  "host": "cse341finalproject-dk7i.onrender.com",
  "basePath": "/",
  "schemes": [
    "https",
    "http"
  ],
  "paths": {
    "/login": {
      "get": {
        "tags": [
          "Auth"
        ],
        "description": "Login and authenticate through github auth0.",
        "responses": {
          "default": {
            "description": ""
          }
        }
      }
    },
    "/logout": {
      "get": {
        "tags": [
          "Auth"
        ],
        "description": "Logout and authenticate through github auth0.",
        "responses": {
          "default": {
            "description": ""
          }
        }
      }
    },
    "/records/": {
      "get": {
        "tags": [
          "Records"
        ],
        "description": "Get all the records in the records collection.",
        "responses": {
          "200": {
            "description": "OK"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "post": {
        "tags": [
          "Records"
        ],
        "description": "Create new record and update inventory.",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "albumName": {
                  "example": "Abbey Road"
                },
                "artist": {
                  "example": "The Beatles"
                },
                "releaseYear": {
                  "example": 1969
                },
                "genre": {
                  "example": "Rock"
                },
                "price": {
                  "example": 19.99
                },
                "description": {
                  "example": "The eleventh studio album by The Beatles, featuring iconic tracks like 'Come Together' and 'Here Comes the Sun'."
                },
                "condition": {
                  "example": "Good"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "401": {
            "description": "Unauthorized"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/records/{id}": {
      "get": {
        "tags": [
          "Records"
        ],
        "description": "Get a single record.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "put": {
        "tags": [
          "Records"
        ],
        "description": "Update a Record.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "albumName": {
                  "example": "Abbey Road"
                },
                "artist": {
                  "example": "The Beatles"
                },
                "releaseYear": {
                  "example": 1969
                },
                "genre": {
                  "example": "Rock"
                },
                "price": {
                  "example": 29.99
                },
                "description": {
                  "example": "The eleventh studio album by The Beatles, featuring iconic tracks like 'Come Together' and 'Here Comes the Sun'."
                },
                "condition": {
                  "example": "New"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          },
          "401": {
            "description": "Unauthorized"
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "delete": {
        "tags": [
          "Records"
        ],
        "description": "Delete a record.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          },
          "401": {
            "description": "Unauthorized"
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/inventory/": {
      "get": {
        "tags": [
          "Inventory"
        ],
        "description": "Get inventory summary.",
        "responses": {
          "200": {
            "description": "OK"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/inventory/{id}": {
      "get": {
        "tags": [
          "Inventory"
        ],
        "description": "Get single inventory report.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    }
  },
  "schemas": [
    "http",
    "https"
  ]
}