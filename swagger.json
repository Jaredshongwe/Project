{
  "swagger": "2.0",
  "info": {
    "title": "Record Store API",
    "description": "Record Store API for CS340 final project",
    "version": "1.0.0"
  },
  "host": "cse341finalproject-dk7i.onrender.com",
  "basePath": "/",
  "schemes": ["https", "http"],
  "paths": {
    "/records/": {
      "get": {
        "tags": ["Records"],
        "description": "Get all records from the records collection.",
        "responses": {
          "200": {"description": "OK"},
          "500": {"description": "Internal Server Error"}
        }
      },
      "post": {
        "tags": ["Records"],
        "description": "Create a new record and update inventory.",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "albumName": {"type": "Abbey Road"},
                "artist": {"type": "The Beatles"},
                "releaseYear": {"type": 1969},
                "genre": {"type": "Rock"},
                "price": {"type": 24.99},
                "description": {"type": "Abbey Road is the eleventh studio album by the English rock band the Beatles, released on 26 September 1969 by Apple Records."},
                "condition": {"type": "Like New"}
              }
            }
          }
        ],
        "responses": {
          "200": {"description": "OK"},
          "401": {"description": "Unauthorized"},
          "500": {"description": "Internal Server Error"}
        }
      }
    },
    "/records/{id}": {
      "get": {
        "tags": ["Records"],
        "description": "Get a single record by ID.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {"description": "OK"},
          "400": {"description": "Bad Request"},
          "404": {"description": "Not Found"},
          "500": {"description": "Internal Server Error"}
        }
      },
      "put": {
        "tags": ["Records"],
        "description": "Update a record by ID.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "albumName": {"type": "Abbey Road"},
                "artist": {"type": "The Beatles"},
                "releaseYear": {"type": 1969},
                "genre": {"type": "Rock"},
                "price": {"type": 16.99},
                "description": {"type": "Abbey Road is the eleventh studio album by the English rock band the Beatles, released on 26 September 1969 by Apple Records."},
                "condition": {"type": "Used"}
              }
            }
          }
        ],
        "responses": {
          "200": {"description": "OK"},
          "400": {"description": "Bad Request"},
          "401": {"description": "Unauthorized"},
          "404": {"description": "Not Found"},
          "500": {"description": "Internal Server Error"}
        }
      },
      "delete": {
        "tags": ["Records"],
        "description": "Delete a record by ID.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {"description": "OK"},
          "400": {"description": "Bad Request"},
          "401": {"description": "Unauthorized"},
          "404": {"description": "Not Found"},
          "500": {"description": "Internal Server Error"}
        }
      }
    },
